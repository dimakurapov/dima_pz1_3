<div class="edit-form-container">
  <div class="edit-form">
    <h2>Редактирование <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name,  autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :role %><br />
        <%= f.text_field :role, value: resource.roles.first.name, readonly: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>В настоящее время ожидается подтверждение для: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(оставьте пустым, если не хотите менять)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>Минимум <%= @minimum_password_length %> символов</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(нам нужен Ваш текущий пароль, чтобы подтвердить изменения)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Обновить", class: "btn" %><br /><br /><br /><br />
      </div>
    <% end %>

    <h3>Удалить мой аккаунт</h3>

    <div>Не понравилось? <%= button_to "Удалить", registration_path(resource_name), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete, class: "btn" %></div>

    <div class="links-container">
      <%= link_to 'Выйти', destroy_user_session_path, 'data-turbo-method': :delete %>

      <%= link_to "Назад", :back %>

      <%= link_to 'Перейти в маркетплейс', markets_path %>
    </div>
  </div>
</div>

<style>/* Стили для контейнера формы редактирования */
.edit-form-container {
  max-width: 400px; /* Максимальная ширина контейнера */
  margin: 0 auto; /* Центрирование контейнера */
  padding: 20px; /* Внутренние отступы */
  background-color: #f9f9f9; /* Цвет фона */
  border-radius: 5px; /* Закругление углов */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Тень */
}

/* Стили для формы редактирования */
.edit-form {
  text-align: center; /* Выравнивание по центру */
}

.edit-form h2 {
  font-size: 24px; /* Размер шрифта */
  margin-bottom: 20px; /* Отступ снизу */
}

/* Стили для полей ввода */
.field {
  margin-bottom: 15px; /* Отступ снизу */
}

.field label {
  font-weight: bold; /* Жирный текст */
}

/* Стили для кнопки отправки */
.btn {
  background-color: #007bff; /* Цвет фона */
  color: #fff; /* Цвет текста */
  padding: 10px 20px; /* Внутренние отступы */
  border: none; /* Убираем границу */
  border-radius: 5px; /* Закругление углов */
  cursor: pointer; /* Изменяем форму курсора при наведении */
}

.btn:hover {
  background-color: #0056b3; /* Цвет фона при наведении */
}

/* Стили для ссылок внизу формы */
.links-container {
  margin-top: 20px; /* Отступ сверху */
}

.links-container a {
  color: #007bff; /* Цвет ссылок */
  text-decoration: none; /* Убираем подчеркивание */
}

.links-container a:hover {
  text-decoration: underline; /* Подчеркивание при наведении */
}
</style>